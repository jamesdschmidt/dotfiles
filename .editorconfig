# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file. Default to 2 space soft tabs.
[*]
charset = utf-8
max_line_length = 100
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
continuation_indent_size = 4

[*.py]
indent_style = space
indent_size = 4
